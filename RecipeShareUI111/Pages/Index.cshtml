@page
@model IndexModel
@{
    ViewData["Title"] = "Recipe Manager";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe Management</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>Recipe Management</h1>

        <div class="recipe-grid-container">
            <table id="recipeGrid" class="recipe-grid">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Ingredients</th>
                        <th>Steps</th>
                        <th>Cooking Time</th>
                        <th>Dietary Tags</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="recipeGridBody">
                    <!-- Recipes will be loaded here -->
                </tbody>
            </table>
        </div>

        <div class="add-recipe-form">
            <h2>Add New Recipe</h2>
            <form id="recipeForm">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" required>
                </div>

                <div class="form-group">
                    <label for="ingredients">Ingredients:</label>
                    <textarea id="ingredients" name="ingredients" required></textarea>
                    <small>Separate ingredients with commas</small>
                </div>

                <div class="form-group">
                    <label for="steps">Steps:</label>
                    <textarea id="steps" name="steps" required></textarea>
                    <small>Separate steps with new lines</small>
                </div>

                <div class="form-group">
                    <label for="cookingTime">Cooking Time (minutes):</label>
                    <input type="number" id="cookingTime" name="cookingTime" required>
                </div>

                <div class="form-group">
                    <label for="dietaryTags">Dietary Tags:</label>
                    <input type="text" id="dietaryTags" name="dietaryTags">
                    <small>Separate tags with commas (e.g., vegetarian, gluten-free)</small>
                </div>

                <button type="submit" class="save-btn">Save Recipe</button>
            </form>
        </div>
    </div>

    <script src="script.js"></script>
</body>
</html>